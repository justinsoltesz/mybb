{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ mybb.settings.bbname }} - {{ lang.delete_threads }}</title>
{% endblock head %}

{% block body %}
    <div class="page-content">
        <header class="page-header">
            <h1 class="title title--page">{{ lang.delete_threads }}</h1>
            <p class="page-description">{{ lang.confirm_delete_threads }}</p>
        </header>
        <form action="moderation.php" method="post">
            <input type="hidden" name="my_post_key" value="{{ mybb.post_code }}" />
            <section class="block block--form form">
                <div class="form__submit">
                    <button type="submit" class="button button--medium">
                        <i class="button__icon fas fa-trash"></i>
                        <span class="button__text">{{ lang.delete_threads }}</span>
                    </button>
                </div>
            </section>
            <input type="hidden" name="action" value="do_multideletethreads" />
            <input type="hidden" name="fid" value="{{ forum.fid }}" />
            <input type="hidden" name="threads" value="{{ inlineids }}" />
            <input type="hidden" name="url" value="{{ return_url }}" />
        </form>
    </div>
{% endblock body %}

<div class="user-list__user">
    {# TO DO: USER PROFILE LINK #}
    <a href="#" class="avatar-profile-link">
        {% if user.avatar %}
            <img src="{{ user.avatar_image }}" alt="" {{ user.avatar_width_height }} class="avatar" />
        {% else %}
            {% include 'partials/default_avatar.twig' %}
        {% endif %}
    </a>
    <h2 class="user-list__username">{{ user.profilelink|raw }}</h2>
	<p class="user-list__user-title">{{ user.usertitle }}</p>
    {# TO DO: USER GROUP IMAGES, STARS #}
    {# {% if user.groupimage %}
        <img src="{{ user.groupimage }}" alt="{{ user.groupimage_title }}" title="{{ user.groupimage_title }}" />
    <br />
    {% endif %}
    {% if user.starimage and user.stars %}
        {% spaceless %}
            {% for star in range(1, user.stars) %}
                <img src="{{ user.starimage }}" border="0" alt="*" />
            {% endfor %}
        {% endspaceless %}
        <br />
    {% endif %} #}

	<ul class="list list--stats list--user">
		<li class="list__item">
			<span class="list__field">{{ lang.posts }}</span>
			<span class="list__value">{{ user.postnum }}</span>
		</li>
		<li class="list__item">
			<span class="list__field">{{ lang.threads }}</span>
			<span class="list__value">{{ user.threadnum }}</span>
		</li>
		<li class="list__item">
			<span class="list__field">{{ lang.joined }}</span>
			<span class="list__value">{{ user.regdate|raw }}</span>
		</li>
		<li class="list__item">
			<span class="list__field">{{ lang.lastvisit }}</span>
			<span class="list__value">{{ user.lastvisit|raw }}</span>
		</li>
        {% if mybb.settings.usereferrals %}
            <li class="list__item">
                <span class="list__field">{{ lang.referrals }}</span>
                <span class="list__value">{{ user.referrals }}</span>
            </li>
        {% endif %}
	</ul>
</div>
